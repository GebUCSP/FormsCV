<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="forms.Views.Page1">

    <StackLayout Padding="20">
        <Label Text="Formulario de CV" FontSize="Large" HorizontalTextAlignment="Center" />

        <Label Text="Nombre:" />
        <Entry x:Name="nombre_" Placeholder="Ingrese su nombre" />

        <Label Text="Apellido:" />
        <Entry x:Name="apellido_" Placeholder="Ingrese su apellido" />

        <Label Text="Email:" />
        <Entry x:Name="email_" Placeholder="Ingrese su email" />

        <Label Text="Número de Teléfono:" />
        <Entry x:Name="numero_" Placeholder="Ingrese su teléfono" />

        <Label Text="Experiencia:" />
        <Entry x:Name="experencia_" Placeholder="Ingrese su experiencia laboral" />

        <Label Text="Habilidades:" />
        <Entry x:Name="habilidades_" Placeholder="Ingrese sus habilidades" />

        <Button Text="Enviar CV" Clicked="EnviarCV" />

    </StackLayout>
</ContentPage>